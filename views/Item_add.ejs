<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .item table {
        width: 100%;
        border: 1px solid #444444;
        border-collapse: collapse;
        font-size: 16px;
      }
      .item th,
      .item tr {
        border: 1px solid #444444;
        font-size: 16px;
      }
    </style>
    <script>
      function addRow_item() {
        // table element 찾기
        const table = document.getElementById("Add_tbody"); //여기에 테이블 이름 들어가야합니다.

        // 새 행(Row) 추가

        const input2 = document.createElement("input");
        const input3 = document.createElement("input");
        const input4 = document.createElement("input");
        const input5 = document.createElement("input");
        const input6 = document.createElement("input");
        const input7 = document.createElement("input");
        const input8 = document.createElement("input");
        const input9 = document.createElement("input");
        // 새 행(Row)에 Cell 추가
        const newRow = table.insertRow();
        const newCell1 = newRow.insertCell(0);
        const newCell2 = newRow.insertCell(1);
        const newCell3 = newRow.insertCell(2);
        const newCell4 = newRow.insertCell(3);
        const newCell5 = newRow.insertCell(4);
        const newCell6 = newRow.insertCell(5);
        const newCell7 = newRow.insertCell(6);
        const newCell8 = newRow.insertCell(7);
        const newCell9 = newRow.insertCell(8);
        const newCell10 = newRow.insertCell(9);
        input2.id = "Cannes_" + table.rows.length;
        input3.id = "Products_" + table.rows.length;
        input4.id = "B_" + table.rows.length;
        input5.id = "SI_" + table.rows.length;
        input6.id = "Q_" + table.rows.length;
        input7.id = "P_" + table.rows.length;
        input8.id = "V_" + table.rows.length;
        input9.id = "N_" + table.rows.length;
        // Cell에 텍스트 추가
        newCell1.innerText = table.rows.length;
        newCell2.append(input2);
        newCell3.append(input3);
        newCell4.append(input4);
        newCell5.append(input5);
        newCell6.append(input6);
        newCell7.append(input7);
        newCell8.append(input8);
        newCell9.append(input9);
      }
    </script>
  </head>
  <body>
    <div class="d-flex flex-wrap" style="justify-content: right; height: 20px">
      <button class="btn btn-light" onclick="addRow_Purchase_Order_Board()" style="font-size: 20px">-</button>
      <button class="btn btn-light" onClick="addRow_item()" style="font-size: 20px">+</button>
      <button type="submit" class="btn btn-light" style="font-size: 20px">저장</button>
    </div>
    <div style="height: 300px; overflow-y: scroll">
      <table id="" class="col-12 item">
        <thead>
          <tr>
            <th>No.</th>
            <th>제품명</th>
            <th>제품번호</th>
            <th>규격</th>
            <th>단위</th>
            <th>수량</th>
            <th>공급가액</th>
            <th>부가세</th>
            <th>비고</th>
          </tr>
        </thead>
        <tbody id="Add_tbody"></tbody>
      </table>
    </div>
  </body>
</html>

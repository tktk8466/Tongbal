<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('header_login.ejs') %>
    <!---->
    <% if(typeof(pass) === 'undefined') { %>
    <script type="text/javascript">
      alert("비정상적인 접근입니다.");
    </script>
    <% } else if(pass == 'NONE') { %>
    <script type="text/javascript">
      alert("로그인이 필요합니다.");
    </script>
    <% } else if(typeof(req) === 'undefined') { %>
    <script type="text/javascript">
      //location.reload();
    </script>
    <% }%>
  </head>

  <body>
    <div class="d-flex justify-content-center">
      <div
        class="col-6"
        style="height: 50px; line-height: 100px; font-size: 30px"
      ></div>
    </div>

    <div class="d-flex justify-content-center">
      <div class="col-6">
        <div class="card">
          <p
            class="card-title"
            style="
              text-align: center;
              font-size: 30px;
              border-bottom: var(--bs-border-color-translucent) 1px solid;
              background: #f7cb83;
              color: white;
            "
          >
            받은 발주서
          </p>
          <div class="card-body align-items-center">
            <div class="d-flex flex-column align-content-center flex-wrap">
              <table>
                <%if (typeof(req.session.Received_Order) !== 'undefined') {%>
                <tr>
                  <td>제목</td>
                  <td>발신 업체</td>
                  <td>발신일</td>
                  <td></td>
                </tr>
                <%var i = 0;%> <% for (var key in req.session.Received_Order) {
                %>
                <tr>
                  <td><%= req.session.Received_Order[i]["Title"] %></td>

                  <td><%= req.session.Received_Order[i]["Order_Company"] %></td>
                  <td>
                    <%=
                    req.session.Received_Order[i]["Order_date"].toLocaleString();
                    %>
                  </td>
                </tr>
                <%i++;%> <%}}%>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
